<div id="addAppointment">
    <form id="modal-form" class="form-horizontal" accept-charset="UTF-8"  data-remote="true" >
        <fieldset>
            <div class="control-group">
                <label class="control-label">Select Your Room:</label>
                <div class="controls">
                    <select id="class" width="300" style="width: 300px">
                        <option selected="selected" disabled="disabled" data-path="" data-url="">Select Your Room:</option>
                        @if (Model.Session.MyMeetings != null)
                        {
                            foreach (AdobeConnectSDK.MeetingItem myMeetingItem in Model.Session.MyMeetings)
                            {
                                <option data-path="@myMeetingItem.url_path" data-url="@myMeetingItem.FullUrl">@myMeetingItem.meeting_name</option>
                            }
                        }
                        else
                        {
                            <option>You have no Class Rooms Assigned</option>
                        }
                    </select>
                    <a id="room_link" href=""></a>
                </div>
                <hr />
                <label class="control-label">Select a Date And Time:</label>
                <div class="controls">
                    <input type="text" class="date_span" id="datetime" />
                </div>
                <label class="control-label">Event Repetition:</label>
                <div class="controls">
                    <select id="repitition" style="width: 80px">
                        <option value="None" selected>None</option>
                        <option value="Weekly">Weekly</option>
                        <option value="Biweekly">Biweekly</option>
                        <option value="Monthly">Monthly</option>
                    </select>
                    <input type="text" class="date_span" id="repitition_date" />
                </div>
                <hr />
                <label class="control-label">Duration (in Min):</label>
                <div class="controls">
                    <select id="duration" style="width: 60px">
                        <option value="29">30</option>
                        <option value="59">60</option>
                        <option value="89">90</option>
                    </select>
                </div>
                <hr />
                <label class="control-label">Number of Occupants:</label>
                <div class="controls">
                    <input id="occupants" type="text" value="70" class="numbersOnly input-mini" />
                </div>
                <div id="error"></div>
                <div id="meetingCrashError"></div>

</fieldset>
    </form>
</div>

<div id="busy1" class="square"></div>
