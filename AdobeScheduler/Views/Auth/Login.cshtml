@model AdobeScheduler.Models.LoginUser
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Auth.cshtml";

}
<span id="logo-login"><img src="~/Content/images/logo-login.jpg" /></span>
<p class="brand"> Online Campus<br /><span class="subTitle">Adobe Connect Calendar</span></p>
<div class="block">
    <div id="error">@Html.ValidationMessage("LogOnError")</div>
    @using (Html.BeginForm("Login", "Auth", FormMethod.Post, new { id = "loginform", @class = "form-vertical" }))
    {
        <span id="username">Username</span>
        @Html.TextBoxFor(m => m.Username, new { placeholder = "Connect UserName", @class = "span12", id = "uname" })
        <span id="password">Password</span>
        @Html.PasswordFor(m => m.Password, new { placeholder = "Connect Password", @class = "span12", id = "pass" })

    }
    <div class="form-actions">
        <button id="login" type="submit" class="btn btn-success pull-right">Login</button>
        <div class="clearfix"></div>
    </div>

</div>
<div id="request" style="display:none;"></div>